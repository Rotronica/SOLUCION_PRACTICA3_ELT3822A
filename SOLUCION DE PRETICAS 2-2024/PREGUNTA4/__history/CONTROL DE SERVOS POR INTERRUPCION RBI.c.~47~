#include <16f877a.h>
#fuses hs,nowdt,put,noprotect,nolvp
#use  delay(clock=20M)
#use standard_io(d)
//CANALES DEL SERVO
#DEFINE USE_SERVO_1
#DEFINE USE_SERVO_2
#DEFINE USE_SERVO_3
//PINES A ELEGIR PARA LA SEÑAL PWM
#DEFINE SERVO_1 PIN_D0
#DEFINE SERVO_2 PIN_D1
#DEFINE SERVO_3 PIN_D2
#define pulsador_1 PIN_B4
#define pulsador_2 PIN_B5
#define pulsador_3 PIN_B6
#define pulsador_4 PIN_B7
#include <servo_st.c>
void limpiar();
#INT_RB
void interrupcion_RBI(){
 if(input(pulsador_1)==0){SERVO_1_WRITE(90);}
 if(input(pulsador_2)==0){SERVO_2_WRITE(45);}
 if(input(pulsador_3)==0){SERVO_3_WRITE(180);}
 if(input(pulsador_4)==0){limpiar();}
}
void main(){
 servo_init();
 port_b_pullups(TRUE);
 enable_interrupts(int_RB);
 enable_interrupts(GLOBAL);
 while(true){
 }
}
void limpiar(){
 SERVO_1_WRITE(0);
 SERVO_2_WRITE(0);
 SERVO_3_WRITE(0);
}
