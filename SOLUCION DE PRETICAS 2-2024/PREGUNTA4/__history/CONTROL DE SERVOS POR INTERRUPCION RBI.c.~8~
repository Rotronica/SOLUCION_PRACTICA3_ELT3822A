#include <16f877a.h>
#fuses xt,nowdt,put,noprotect,nolvp
#use  delay(clock=4M)
#use standard_io(d)
//CANALES DEL SERVO
#DEFINE USE_SERVO_1
#DEFINE USE_SERVO_2
#DEFINE USE_SERVO_3
//PINES A ELEGIR PARA LA SEÑAL PWM
#DEFINE SERVO_1 PIN_D0
#DEFINE SERVO_2 PIN_D1
#DEFINE SERVO_3 PIN_D2
#define SERVO_4 PIN_D3
#define pulsador_1 PIN_B4
#include <servo_st.c>
#INT_RB
void interrupcion_RBI(){
 if(input(pulsador_1)==0){SERVO_1_WRITE(90);}
 //SERVO_1_WRITE(0);
}
void main(){
 servo_init();
 port_b_pullups(TRUE);
 enable_interrupts(int_RB);
 enable_interrupts(GLOBAL);
 while(true){
 }
}
